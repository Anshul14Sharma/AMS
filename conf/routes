# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.EmployeeController.pageRenderer()
#GET     /hello                      controllers.HomeController.hello


POST    /attendance                 controllers.EmployeeController.saveAttendance
GET     /attendance                controllers.EmployeeController.getAttendance(email: String)

GET     /check                      controllers.EmployeeController.check

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /javascriptRoutes           controllers.Application.javascriptRoutes(request: Request)